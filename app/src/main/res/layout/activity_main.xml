<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_girld_background"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/purple_701"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:translationY="20dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/txtstyle"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="34sp"
                android:translationX="-10dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:translationX="125dp"
            android:translationY="160dp"
            app:srcCompat="@drawable/img_logo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay Cad"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:translationY="165dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:translationX="100dp"
            android:translationY="350dp"
            app:srcCompat="@drawable/img_security" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="100% safe y secure"
            android:textColor="@color/white"
            android:translationX="150dp"
            android:translationY="320dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copyright  @ 2023 all right reserved"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:translationY="340dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>