<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityverification">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="302dp"
        android:layout_height="222dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img1_splash_screen" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="56dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:text="Hello"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <TextView
        android:id="@+id/txtanuncio"
        android:layout_width="91dp"
        android:layout_height="35dp"
        android:textAlignment="gravity"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="356dp"
        android:layout_height="25dp"
        android:layout_marginTop="50dp"
        android:text="verify your cellphone entering the 5 digits code"
        android:textAlignment="center"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtanuncio" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="413dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15">

        <EditText
            android:id="@+id/txtnum1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/txtstyle2"
            android:ems="10"
            android:hint="0"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:translationX="60dp"
            android:translationY="5dp" />

        <EditText
            android:id="@+id/txtnum2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/txtstyle2"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:hint="0"
            android:textAlignment="center"
            android:translationX="70dp"
            android:translationY="5dp" />

        <EditText
            android:id="@+id/txtnum3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/txtstyle2"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:hint="0"
            android:textAlignment="center"
            android:translationX="80dp"
            android:translationY="5dp" />

        <EditText
            android:id="@+id/txtnum4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/txtstyle2"
            android:ems="10"
            android:inputType="number"
            android:hint="0"
            android:maxLength="1"
            android:textAlignment="center"
            android:translationX="90dp"
            android:translationY="5dp" />

        <EditText
            android:id="@+id/txtnum5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/txtstyle2"
            android:ems="10"
            android:inputType="number"
            android:hint="0"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            android:maxLength="1"
            android:textAlignment="center"
            android:translationX="100dp"
            android:translationY="5dp" />

    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="297dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/primary"
        android:text="Next"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/btngetnewcode"
        android:layout_width="297dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="@color/white"
        android:text="Get new code"
        android:textColor="@color/primary"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>